CREATE OR REPLACE FUNCTION migrationFoo ()
RETURNS integer AS
$total$
declare
	total integer;
BEGIN
   SELECT count(*) into total FROM flashcards;
   RETURN total;
END;
$total$ LANGUAGE plpgsql;



